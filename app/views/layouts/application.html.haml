!!!
%html
  %head
    %title Pref
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    #head.container
      .offset9.span3
        - if current_user
          = link_to t('.logout'), destroy_user_session_path, method: :delete
        - else
          - unless controller_name == 'sessions'
            = link_to t('.login'), new_user_session_path

    #content.container
      = yield
